<configuration>

  <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
  <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
  <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>
  <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%15.15t]){faint} %clr(%-50.50logger{49}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
  <property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} [%15.15t] %-50.50logger{49} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

  <springProperty name="fileEnabled" source="logging.file.enabled"/>
  <springProperty name="filePath" source="logging.file.path"/>
  <springProperty name="fileName" source="logging.file.file-name"/>
  <springProperty name="fileLifetime" source="logging.file.max-history"/>

  <if condition='property("fileEnabled").equals("true")'>
    <then>
      <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${filePath}/${fileName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>${filePath}/${fileName}-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
          <maxHistory>${fileLifetime}</maxHistory>
        </rollingPolicy>

        <encoder>
          <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
      </appender>
    </then>
  </if>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <root>
    <appender-ref ref="STDOUT"/>
    <if condition='property("fileEnabled").equals("true")'>
      <then>
        <appender-ref ref="FILE"/>
      </then>
    </if>
  </root>

</configuration>